{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Module Options */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    /* Path Options */
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
